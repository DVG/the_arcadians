<div class="page-header"><h2>Sign in</h2></div>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :method => :post, :class => 'form-horizontal'}) do |f| %>
  <div class="inputs">
    <%= f.input :username, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render :partial => "devise/shared/links" %>