<ul class ="breadcrumb" id="breadcrumbs">
  <li>
    TheArcadians.net Forums
  </li>
</ul>
<div class="page-header"><h1>TheArcadians.net Community Forums</h1></div>
<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th>Forum Name</th>
      <th>Posts</th>
      <th>Latest Post</th>
    </tr>
  </thead>
  <tbody>
    <% @forums.each do |forum| %>
      <%= content_tag(:tr, forum, :id => "forum_#{forum.id}") do %>
        <td class="forum_title"><%= link_to forum.title, forum_discussions_path(forum) %></td>
        <td class='post_count'><%= forum.posts.size %></td>
        <td class='forum_updated_at'><%= "#{time_ago_in_words(forum.updated_at)} ago" %></td>
      <% end %>
    <% end %>
  </tbody>
</table>